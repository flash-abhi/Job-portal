<div class="row justify-content-center mt-4">
  <div class="col-md-6">
      <div class="card shadow-lg p-4 border-0 rounded">
          <h1 class="mb-4 mt-3 text-center text-primary">Apply in less than 1 minute</h1>
          
          <% if(errorMessage){ %>
          <div class="alert alert-danger" role="alert">
              <% errorMessage.forEach(error =>{ %>
              <li><%= error %></li>
              <% }) %>
          </div>
          <% } %>
          
          <form action="/apply" method="post" enctype="multipart/form-data">
              <div class="mb-4">
                  <div class="input-group">
                      <span class="input-group-text">Name</span>
                      <input type="text" class="form-control" name="name" placeholder="Enter your name" required>
                  </div>
              </div>

              <div class="mb-4">
                  <div class="input-group">
                      <span class="input-group-text">Email</span>
                      <input type="email" class="form-control" name="email" placeholder="Enter your email" required>
                  </div>
              </div>

              <div class="mb-4">
                  <div class="input-group">
                      <span class="input-group-text">Phone Number</span>
                      <input type="tel" class="form-control" name="phone" placeholder="+91 _ _ _ _  _ _  _ _ _ _" required>
                  </div>
              </div>

              <div class="mb-4">
                  <label class="form-label">Upload Resume</label>
                  <input type="file" class="form-control" name="resume" accept=".doc,.docx,.xls,.xlsx,.ppt,.pptx,.txt,.pdf,image/*" required>
              </div>

              <button type="submit" class="btn btn-primary w-100">Submit</button>
          </form>
      </div>
  </div>
</div>