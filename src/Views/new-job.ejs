
    <div class="card p-4 mt-3">
        <h2 class="text-center text-secondary">Post a New Job</h2>
        <form action="/new-job" method="post">
            <div class="mb-3">
                <select class="form-select" name="job_category" required>
                    <option selected disabled>select job category</option>
                    <option value="Tech">Tech</option>
                    <option value="Non-Tech">Non Tech</option>
                </select>
            </div>
            <div class="mb-3">
                <select class="form-select" name="job_designation" required>
                    <option selected disabled>select job designation</option>
                    <option value="HR">HR</option>
                    <option value="SDE">SDE</option>
                    <option value="DevOps">DevOps</option>
                    <option value="MERN Developer">MERN Developer</option>
                    <option value="MEAN Developer">MEAN Developer</option>
                    <option value="JAVA Developer">JAVA Developer</option>
                    <option value="Frontend Developer">Frontend Developer</option>
                    <option value="Backend Developer">Backend Developer</option>
                    <option value="Full Stack Developer">Full Stack Developer</option>
                </select>
            </div>
            <div class="mb-3">
                <input type="text" name="job_location" class="form-control" placeholder="Enter job location" required>
            </div>
            <div class="mb-3">
                <input type="text" name="company_name" class="form-control" placeholder="Company Name" required>
            </div>
            <div class="row g-2 mb-3">
                <div class="col-md-4">
                    <input type="text" class="form-control" name="salary" placeholder="Enter salary" required>
                </div>
                <div class="col-md-4">
                    <input type="number" class="form-control" name="total-positions" placeholder="Total Positions" required>
                </div>
                <div class="col-md-4">
                    <input type="number" class="form-control" name="openings" placeholder="Total no of openings" required>
                </div>
            </div>
            <div class="row g-2 mb-3">
                <div class="col-md-6">
                    <select class="form-select" name="skills_required" multiple required>
                        <option disabled>select skills required for this</option>
                        <option value="React">React</option>
                        <option value="NodeJs">NodeJs</option>
                        <option value="Angular">Angular</option>
                        <option value="MongoDB">MongoDB</option>
                        <option value="SQL">SQL</option>
                        <option value="Express">Express</option>
                        <option value="Java">Java</option>
                        <option value="SpringBoot">SpringBoot</option>
                        <option value="C++">C++</option>
                        <option value="Data Structures">Data Structures & Algo</option>
                    </select>
                </div>
                <div class="col-md-6">
                    <input type="date" class="form-control" name="apply_by" required>
                </div>
            </div>
            <button type="submit" class="btn btn-success w-100">Submit</button>
        </form>
    </div>